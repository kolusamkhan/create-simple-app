{
  "name": "create-ak-simple-app",
  "version": "1.0.15",
  "description": "simple package for experiments",
  "bin": "dist-esm/src/nextjs/index.js",
  "type": "module",
  "main": "dist-cjs/index.js",
  "module": "dist-esm/index.js",
  "exports": {
    "import": "./dist-esm/index.js",
    "require": "./dist-cjs/index.js"
  },
  "scripts": {
    "safety-check": "git pull && git status",
    "clean": "rimraf ./dist-esm ./dist-cjs",
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "lint-fix": "eslint --ext \".ts,.js\" src --fix",
    "gen-docs": "typedoc src/index.ts",
    "test": "jest --passWithNoTests",
    "auto-changelog": "auto-changelog --hide-credit --breaking-pattern \"breaking:\"",
    "gen-changelog": "npm run auto-changelog && git add CHANGELOG.md && git commit -m \"doc: change-log updated.\"",
    "tag": "node ./configuration/tag.js",
    "tsc": "tsc --resolveJsonModule",
    "tsc-cjs": "tsc --p tsconfig-cjs.json --resolveJsonModule",
    "fixup": "./fixup",
    "build": "npm-run-all -s test clean tsc tsc-cjs fixup tag ",
    "prepare": "npm run safety-check && npm run build",
    "_prepublishOnly": "npm run build",
    "prerelease": "npm run clean",
    "release": "npm run tsc",
    "prepublish": "npm run release",
    "create:dynamic": "node --experimental-json-modules ./dist-esm/src/nextjs/index.js "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolusamkhan/create-simple-app.git"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kolusamkhan/create-simple-app/issues"
  },
  "homepage": "https://github.com/kolusamkhan/create-simple-app#readme",
  "devDependencies": {
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.4.3",
    "@types/async-retry": "^1.4.4",
    "@types/cross-spawn": "^6.0.2",
    "@types/prompts": "^2.0.14",
    "@types/rimraf": "^3.0.2",
    "@types/tar": "^6.1.1",
    "@types/validate-npm-package-name": "3.0.0",
    "async-retry": "^1.3.3",
    "chalk": "^5.0.1",
    "commander": "^9.2.0",
    "cpy": "7.3.0",
    "cross-spawn": "^7.0.3",
    "got": "^12.0.4",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "tar": "^6.1.11",
    "update-check": "^1.5.4",
    "validate-npm-package-name": "3.0.0"
  },
  "files": [
    "dist-*/",
    "templates/**/*"
  ]
}
